{
  "private": true,
  "scripts": {
    "local": "cross-env NODE_ENV=development webpack --progress --hide-modules --env=local --config=node_modules/laravel-mix/setup/webpack.config.js",
    "staging": "cross-env NODE_ENV=production webpack --progress --hide-modules --env=staging --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "cross-env NODE_ENV=production webpack --progress --hide-modules --env=production --config=node_modules/laravel-mix/setup/webpack.config.js",
    "dev": "npm run local",
    "watch": "npm run local -- --watch",
    "deploy": "npm run production && ./vendor/bin/jigsaw build production && git add build_production && git commit -m 'Build for production' && git subtree push --prefix build_production deploy gh-pages"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack-plugin": "^2.0.1",
    "cross-env": "^3.2.3",
    "hasbin": "^1.2.3",
    "laravel-mix": "^2.0.0",
    "laravel-mix-purgecss": "^2.0.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "node-cmd": "^3.0.0",
    "on-build-webpack": "^0.1.0",
    "tailwindcss": "^0.6.5",
    "webpack-watch": "^0.2.0",
    "yargs": "^4.6.0"
  },
  "dependencies": {
    "normalize.css": "^3.0.3",
    "suitcss-base": "^1.0.2"
  }
}
